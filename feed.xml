---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" 
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
     xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}</link>
    <atom:link href="{{ site.url }}/feed.xml" rel="self" type="application/rss+xml" />
    <language>en-us</language>
    <managingEditor>{{ site.email }} ({{ site.author }})</managingEditor>
    <webMaster>{{ site.email }} ({{ site.author }})</webMaster>
    <copyright>Copyright {{ 'now' | date: '%Y' }} {{ site.author }}</copyright>
    <pubDate>{% if site.posts.size > 0 %}{{ site.posts.first.date | date_to_rfc822 }}{% else %}{{ site.time | date_to_rfc822 }}{% endif %}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    <docs>https://www.rssboard.org/rss-specification</docs>
    <ttl>1440</ttl>
    <sy:updatePeriod>daily</sy:updatePeriod>
    <sy:updateFrequency>1</sy:updateFrequency>
    
    <!-- Blog-specific metadata -->
    <category>Technology</category>
    <category>Cloud Computing</category>
    <category>DevOps</category>
    <category>Software Engineering</category>
    
    <!-- Image for the feed -->
    <image>
      <url>{{ '/assets/images/logo.png' | absolute_url }}</url>
      <title>{{ site.title | xml_escape }}</title>
      <link>{{ site.url }}</link>
      <width>200</width>
      <height>200</height>
      <description>{{ site.title | xml_escape }} Logo</description>
    </image>
    
    {% for post in site.posts limit: 20 %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <description>
        <![CDATA[
          {% if post.excerpt %}
            {{ post.excerpt | strip_html }}
          {% else %}
            {{ post.content | strip_html | truncatewords: 50 }}
          {% endif %}
        ]]>
      </description>
      <content:encoded>
        <![CDATA[
          {% if post.image %}
          <img src="{{ post.image | absolute_url }}" alt="{{ post.image_alt | default: post.title | xml_escape }}" style="max-width: 100%; height: auto; margin-bottom: 1rem;" />
          {% endif %}
          {{ post.content }}
        ]]>
      </content:encoded>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <link>{{ post.url | absolute_url }}</link>
      <guid isPermaLink="true">{{ post.url | absolute_url }}</guid>
      <author>{{ site.email }} ({{ post.author | default: site.author }})</author>
      <dc:creator>{{ post.author | default: site.author }}</dc:creator>
      
      {% if post.categories %}
      {% for category in post.categories %}
      <category>{{ category | xml_escape }}</category>
      {% endfor %}
      {% endif %}
      
      {% if post.tags %}
      {% for tag in post.tags %}
      <category>{{ tag | xml_escape }}</category>
      {% endfor %}
      {% endif %}
      
      {% if post.image %}
      <enclosure url="{{ post.image | absolute_url }}" type="image/{% if post.image contains '.png' %}png{% elsif post.image contains '.jpg' or post.image contains '.jpeg' %}jpeg{% elsif post.image contains '.gif' %}gif{% elsif post.image contains '.svg' %}svg+xml{% else %}jpeg{% endif %}" length="0" />
      {% endif %}
      
      <!-- Reading time -->
      {% if post.reading_time %}
      <dc:subject>{{ post.reading_time }} minute read</dc:subject>
      {% endif %}
      
      <!-- Word count -->
      <dc:subject>{{ post.content | number_of_words }} words</dc:subject>
    </item>
    {% endfor %}
  </channel>
</rss>