---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:image="http://www.google.com/schemas/sitemap-image/1.1">
  <!-- Homepage -->
  <url>
    <loc>{{ site.url }}/</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>
  
  <!-- Blog Index -->
  <url>
    <loc>{{ site.url }}/blog/</loc>
    <lastmod>{% if site.posts.size > 0 %}{{ site.posts.first.date | date_to_xmlschema }}{% else %}{{ site.time | date_to_xmlschema }}{% endif %}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  
  <!-- Blog Posts -->
  {% for post in site.posts %}
  <url>
    <loc>{{ site.url }}{{ post.url }}</loc>
    <lastmod>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.8</priority>
    {% if post.image %}
    <image:image>
      <image:loc>{{ site.url }}{{ post.image }}</image:loc>
      <image:title>{{ post.title | xml_escape }}</image:title>
      {% if post.image_alt %}<image:caption>{{ post.image_alt | xml_escape }}</image:caption>{% endif %}
    </image:image>
    {% endif %}
  </url>
  {% endfor %}
  
  <!-- Static Pages -->
  {% for page in site.pages %}
    {% unless page.url contains '/404' or page.url contains '/feed' or page.url contains '/sitemap' %}
    <url>
      <loc>{{ site.url }}{{ page.url }}</loc>
      <lastmod>{{ page.last_modified_at | default: site.time | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>{% if page.url == '/' %}1.0{% elsif page.url contains '/blog' %}0.9{% else %}0.7{% endif %}</priority>
    </url>
    {% endunless %}
  {% endfor %}
  
  <!-- Tag Pages -->
  {% for tag in site.tags %}
  <url>
    <loc>{{ site.url }}/blog/tags/{{ tag[0] | slugify }}/</loc>
    <lastmod>{% assign latest_post = tag[1] | sort: 'date' | last %}{{ latest_post.date | date_to_xmlschema }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.6</priority>
  </url>
  {% endfor %}
  
  <!-- Tags Index -->
  <url>
    <loc>{{ site.url }}/blog/tags/</loc>
    <lastmod>{% if site.posts.size > 0 %}{{ site.posts.first.date | date_to_xmlschema }}{% else %}{{ site.time | date_to_xmlschema }}{% endif %}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.5</priority>
  </url>
  
  <!-- Projects (if any) -->
  {% for project in site.projects %}
  <url>
    <loc>{{ site.url }}{{ project.url }}</loc>
    <lastmod>{{ project.last_modified_at | default: site.time | date_to_xmlschema }}</lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endfor %}
</urlset>