---
layout: null
---
{
  "version": "https://jsonfeed.org/version/1.1",
  "title": "{{ site.title | jsonify }}",
  "description": "{{ site.description | jsonify }}",
  "home_page_url": "{{ site.url }}",
  "feed_url": "{{ site.url }}/feed.json",
  "user_comment": "This feed allows you to read the posts from this site in any feed reader that supports the JSON Feed format.",
  "icon": "{{ '/assets/images/logo.png' | absolute_url }}",
  "favicon": "{{ '/favicon.ico' | absolute_url }}",
  "author": {
    "name": "{{ site.author }}",
    "url": "{{ site.url }}",
    "avatar": "{{ '/assets/images/profile/profile-photo.jpg' | absolute_url }}"
  },
  "language": "en-US",
  "items": [
    {% for post in site.posts limit: 20 %}
    {
      "id": "{{ post.url | absolute_url }}",
      "url": "{{ post.url | absolute_url }}",
      "title": {{ post.title | jsonify }},
      "content_html": {{ post.content | jsonify }},
      "content_text": {{ post.content | strip_html | jsonify }},
      "summary": {% if post.excerpt %}{{ post.excerpt | strip_html | jsonify }}{% else %}{{ post.content | strip_html | truncatewords: 50 | jsonify }}{% endif %},
      "date_published": "{{ post.date | date_to_xmlschema }}",
      "date_modified": "{{ post.last_modified_at | default: post.date | date_to_xmlschema }}",
      {% if post.image %}
      "image": "{{ post.image | absolute_url }}",
      {% endif %}
      {% if post.tags.size > 0 %}
      "tags": [
        {% for tag in post.tags %}
        "{{ tag }}"{% unless forloop.last %},{% endunless %}
        {% endfor %}
      ],
      {% endif %}
      "author": {
        "name": "{{ post.author | default: site.author }}",
        "url": "{{ site.url }}"
      },
      "external_url": {% if post.canonical_url %}"{{ post.canonical_url }}"{% else %}null{% endif %}
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}